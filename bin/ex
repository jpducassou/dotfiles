#!/bin/bash

if [ -f "${1}" ] ; then
	case "${1}" in
		*.a)          ar  -xv      "${1}"         ;;
		*.tgz)        tar -xvzf    "${1}"         ;;
		*.tar.gz)     tar -xvzf    "${1}"         ;;
		*.tar.bz2)    tar -xvjf    "${1}"         ;;
		*.tar.xz)     tar -xvJf    "${1}"         ;;
		*.bz2)        bunzip2      "${1}"         ;;
		*.rar)        unrar  x -o- "${1}"         ;;
		*.gz)         gunzip -vk   "${1}"         ;;
		*.zip)        unzip        "${1}"         ;;
		*.7z)         7z     x     "${1}"         ;;
		*.xz)         unxz --keep  "${1}"         ;;
		*) echo "'${1}' unknow extension to extract!" ;;
	esac
else
	echo "'${1}' is not a valid file"
fi

